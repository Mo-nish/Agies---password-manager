{
  "name": "agies-password-manager-desktop",
  "version": "1.0.0",
  "description": "Agies Password Manager - Desktop App for Windows, macOS, and Linux",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:windows": "tauri build --target x86_64-pc-windows-msvc",
    "tauri:build:macos": "tauri build --target x86_64-apple-darwin",
    "tauri:build:linux": "tauri build --target x86_64-unknown-linux-gnu",
    "tauri:build:all": "npm run tauri:build:windows && npm run tauri:build:macos && npm run tauri:build:linux"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "@tauri-apps/api": "^1.5.0",
    "@tauri-apps/plugin-shell": "^1.0.0",
    "@tauri-apps/plugin-dialog": "^1.0.0",
    "@tauri-apps/plugin-fs": "^1.0.0",
    "@tauri-apps/plugin-store": "^1.0.0",
    "@tauri-apps/plugin-notification": "^1.0.0",
    "@tauri-apps/plugin-global-shortcut": "^1.0.0",
    "crypto-js": "^4.1.1",
    "qrcode": "^1.5.3",
    "react-qr-code": "^2.0.12",
    "react-hot-toast": "^2.4.1",
    "lucide-react": "^0.263.1",
    "clsx": "^1.2.1",
    "tailwind-merge": "^1.14.0"
