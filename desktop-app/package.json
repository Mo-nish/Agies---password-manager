    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "vite": "^4.2.0",
    "@tauri-apps/cli": "^1.5.0"
  },
  "keywords": [
    "tauri",
    "desktop",
    "password-manager",
    "security",
    "encryption",
    "windows",
    "macos",
    "linux"
  ],
