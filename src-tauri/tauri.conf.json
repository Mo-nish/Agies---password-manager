{
  "build": {
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build:frontend",
    "devPath": "http://localhost:3000",
    "distDir": "../public",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Agies",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA", "$DESKTOP", "$DOCUMENT", "$DOWNLOAD"]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["https://api.agies.com", "https://haveibeenpwned.com", "https://leakcheck.io"]
      },
      "notification": {
        "all": false
      },
      "os": {
        "all": false
      },
      "path": {
        "all": false
      },
      "process": {
        "all": false,
        "relaunch": true,
        "exit": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.agies.vault",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Productivity",
      "shortDescription": "Agies - The Maze Vault Password Manager",
      "longDescription": "Revolutionary password manager with Chakravyuham maze security system",
      "copyright": "Copyright Â© 2024 Agies Team. All rights reserved.",
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.15"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": null
      },
      "linux": {
        "deb": {
          "depends": []
        },
        "appimage": {
          "bundleMediaFramework": false
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https: data:; connect-src 'self' https: wss:;",
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": true
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Agies - The Maze Vault",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "titleBarStyle": "Visible"
      }
    ],
    "systemTray": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true
    },
    "globalShortcut": {
      "all": false,
      "shortcuts": [
        {
          "shortcut": "CmdOrCtrl+Shift+A",
          "action": "show_window"
        }
      ]
    }
  }
}
